# ========================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill with your values:
#   cp .env.example .env
# ========================================

# ========================================
# KAFKA
# ========================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ========================================
# POSTGRESQL (Order Service)
# ========================================
POSTGRES_DB=orderdb
POSTGRES_USER=admin
POSTGRES_PASSWORD=changeme

# ========================================
# MONGODB (Product Service)
# ========================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=changeme
MONGO_INITDB_DATABASE=productdb

# ========================================
# GRAFANA
# ========================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme

# ========================================
# MICROSERVICES - ORDER SERVICE
# ========================================
ORDER_SERVICE_DB_URL=jdbc:postgresql://postgres:5432/orderdb
ORDER_SERVICE_DB_USER=admin
ORDER_SERVICE_DB_PASSWORD=changeme

# ========================================
# MICROSERVICES - PRODUCT SERVICE
# ========================================
PRODUCT_SERVICE_MONGODB_URI=mongodb://admin:changeme@mongodb:27017
PRODUCT_SERVICE_MONGODB_DATABASE=productdb
PRODUCT_SERVICE_REDIS_URI=redis://redis:6379

# ========================================
# MICROSERVICES - NOTIFICATION SERVICE
# ========================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_WEBHOOK_ENABLED=true
NOTIFICATION_DISCORD_ENABLED=true

BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_NAME=YourCompanyName
BREVO_SENDER_EMAIL=noreply@example.com
NOTIFICATION_EMAIL_ENABLED=false

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_JSON_ENABLED=true